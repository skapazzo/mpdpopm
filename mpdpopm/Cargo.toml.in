[package]
name = "mpdpopm"
version = "@PACKAGE_VERSION@"
authors = ["@PACKAGE_AUTHOR@"]
edition = "2018"

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html

[dependencies]
clap = "2.32"
daemonize = "0.4.1"
futures = "0.3.4"
log = "0.4.8"
log4rs = "0.10.0"
serde = { version = "1.0", features = ["derive"] }
serde-lexpr = "0.1.1"
tokio = { version = "0.2.13", features = ["dns", "io-util", "macros", "rt-threaded", "signal", "tcp", "time"] }
